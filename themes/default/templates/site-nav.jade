          a.dropdown-toggle(data-toggle='dropdown',href='#')
            = 'Files'
            if type=='files'
              = ' - ' + name
            = ' '
            span.caret
          ul.dropdown-menu
            each item in result.files
              li
                a(href=rel_path+item.filename+'.html')= item.name
