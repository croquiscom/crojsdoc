div.showcode
  button.btn.btn-info #{showcode_label}
  span
    |  (defined in 
    if github && github.sourcelink
      a(href='#{github.repository}/blob/#{github.branch}/#{showcode_defined_in}#L#{showcode_line_number}') #{showcode_defined_in}:#{showcode_line_number}
    else
      | #{showcode_defined_in}:#{showcode_line_number}
    |)
pre.sourcecode.prettyprint(class='.linenums:'+showcode_line_number)= showcode_code
