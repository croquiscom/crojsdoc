extends layout

block vars
  - var body_span = 9
  - var sidebar_span = 12 - body_span
  - var use_affix = true
  - var items = result.modules
  - var has_namespace = true

block nav-item
  - var display_name = item.ctx.name.substr(current_namespace.length)
  li
    a(href=rel_path+item.filename+'.html')= display_name

block body
  - var current_namespace = null
  each ns_item in items
    if current_namespace!==ns_item.namespace
      - current_namespace = ns_item.namespace
      if current_namespace!==''
        - var display_name = current_namespace.replace(/\.$/, '')
        h2= display_name
      table.table.table-bordered.table-hover
        each item in items
          if current_namespace===item.namespace
            - var display_name = item.ctx.name.substr(current_namespace.length)
            tr
              td
                a(href=rel_path+item.filename+'.html')= display_name
              td!= convertLink(rel_path, item.description.summary)
