div.navbar.navbar-inverse.navbar-fixed-top
  div.navbar-inner
    div.container-fluid
      ul.nav
        li(class=(type=='home'?'active':''))
          a(href='#{rel_path}index.html') Home
        if result.guides.length > 0
          li.dropdown(class=(type=='guides'?'active':''))
            a.dropdown-toggle(data-toggle='dropdown',href='#')
              = 'Guides'
              if type=='guides'
                = ' - ' + name
              = ' '
              span.caret
            ul.dropdown-menu
              each item in result.guides
                li
                  a(href=rel_path+item.filename+'.html')= item.name
        if result.modules.length > 0
          li(class=(type=='modules'?'active':''))
            a(href=rel_path+result.modules[0].filename+'.html') Modules
              if type=='modules'
                = ' - ' + name
        if result.classes.length > 0
          li(class=(type=='classes'?'active':''))
            a(href=rel_path+result.classes[0].filename+'.html') Classes
              if type=='classes'
                = ' - ' + name
        if result.pages.length > 0
          li(class=(type=='pages'?'active':''))
            a(href='#{rel_path}pages.html') Pages
        if result.restapis.length > 0
          li(class=(type=='restapis'?'active':''))
            a(href='#{rel_path}restapis.html') REST APIs
        if result.features.length > 0
          li.dropdown(class=(type=='features'?'active':''))
            a.dropdown-toggle(data-toggle='dropdown',href='#')
              = 'Features'
              if type=='features'
                = ' - ' + name
              = ' '
              span.caret
            ul.dropdown-menu
              each item in result.features
                li
                  a(href=rel_path+item.filename+'.html')= item.name
        if result.files.length > 0
          li.dropdown(class=(type=='files'?'active':''))
            a.dropdown-toggle(data-toggle='dropdown',href='#')
              = 'Files'
              if type=='files'
                = ' - ' + name
              = ' '
              span.caret
            ul.dropdown-menu
              each item in result.files
                li
                  a(href=rel_path+item.filename+'.html')= item.name
      div.options
        label(class='checkbox')
          input#options-private(type='checkbox')
          |  Private 
